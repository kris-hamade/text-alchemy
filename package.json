{
  "name": "text-alchemy",
  "version": "1.0.0",
  "description": "A simple Node.js library for JSON parsing and text formatting",
  "main": "src/index.js",
  "bin": {
    "text-alchemy": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "example": "node src/examples/parser-example.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "echo 'No linter configured'",
    "format": "echo 'No formatter configured'",
    "prepublishOnly": "npm run test:ci",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "version:prerelease": "npm version prerelease && git push && git push --tags"
  },
  "keywords": [
    "javascript",
    "node",
    "json",
    "parser",
    "text",
    "formatting",
    "cli",
    "text-processing",
    "alchemy",
    "text-alchemy",
    "base64",
    "html",
    "email",
    "smtp",
    "reporting"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "kris-hamade <khamade22@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kris-hamade/text-alchemy.git"
  },
  "homepage": "https://github.com/kris-hamade/text-alchemy#readme",
  "bugs": {
    "url": "https://github.com/kris-hamade/text-alchemy/issues"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/examples/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "files": [
    "src/**/*"
  ]
}
